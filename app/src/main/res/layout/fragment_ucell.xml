<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UcellFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ucell_fon">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_menu"
                android:padding="15dp"
                android:layout_marginRight="110dp"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="5"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#602681">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/share"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/telegram"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/star"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/info_image_rv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:scrollbarSize="10dp"
        android:scrollIndicators="bottom"
        tools:listitem="@layout/item_info"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:backgroundTint="@color/ucell_fon"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ucell_fon"
                    app:cardElevation="@null"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="50dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/button_mobi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mobi_uz"
                        android:padding="8dp"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ucell_fon"
                    app:cardElevation="@null"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="50dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/button_beeline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/beeline"
                        android:padding="8dp"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ucell_fon"
                    android:layout_marginTop="5dp"
                    app:cardElevation="@null"
                    app:cardCornerRadius="50dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/button_muzmobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/uzmobile"
                        android:padding="8dp"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#602681"
                    app:cardElevation="@null"
                    app:cardCornerRadius="50dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/button_ucell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ucell"
                        android:padding="8dp"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ucell_fon"
                    android:layout_marginTop="5dp"
                    app:cardElevation="@null"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="50dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/button_humans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/humans"
                        android:padding="8dp"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/ucell_corner_color"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_margin="30dp"
                            app:cardCornerRadius="50dp"
                            android:backgroundTint="@color/ucell_fon"
                            android:layout_gravity="bottom|center"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/internet"
                                android:padding="10dp"
                                android:background="@color/ucell_fon"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="@string/internet_paketlar"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:textColor="@color/ucell_fon"
                            android:fontFamily="@font/name_kopany"
                            android:gravity="top|center"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/ucell_corner_color"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_margin="30dp"
                            app:cardCornerRadius="50dp"
                            android:backgroundTint="@color/beeline_fon"
                            android:layout_gravity="bottom|center"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/tariflar"
                                android:padding="10dp"
                                android:background="@color/ucell_fon"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="@string/tarif_rejalari"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:textColor="@color/ucell_fon"
                            android:fontFamily="@font/name_kopany"
                            android:gravity="top|center"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/ucell_corner_color"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_margin="30dp"
                            app:cardCornerRadius="50dp"
                            android:backgroundTint="@color/beeline_fon"
                            android:layout_gravity="bottom|center"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/sms"
                                android:padding="10dp"
                                android:background="@color/ucell_fon"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="@string/sms_to_plamlar"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:textColor="@color/ucell_fon"
                            android:fontFamily="@font/name_kopany"
                            android:gravity="top|center"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/ucell_corner_color"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_margin="30dp"
                            app:cardCornerRadius="50dp"
                            android:backgroundTint="@color/beeline_fon"
                            android:layout_gravity="bottom|center"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/daqiqa"
                                android:padding="10dp"
                                android:background="@color/ucell_fon"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="@string/daqiqa_paketlar"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:textColor="@color/ucell_fon"
                            android:fontFamily="@font/name_kopany"
                            android:gravity="top|center"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/ucell_corner_color"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_margin="30dp"
                            app:cardCornerRadius="50dp"
                            android:backgroundTint="@color/beeline_fon"
                            android:layout_gravity="bottom|center"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/kodlar"
                                android:padding="10dp"
                                android:background="@color/ucell_fon"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="@string/ussd_kodlar_va_n_xizmatlar"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:textColor="@color/ucell_fon"
                            android:fontFamily="@font/name_kopany"
                            android:gravity="top|center"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/ucell_corner_color"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_margin="30dp"
                            app:cardCornerRadius="50dp"
                            android:backgroundTint="@color/ucell_fon"
                            android:layout_gravity="bottom|center"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/yangiliklar"
                                android:scaleType="centerCrop"
                                android:padding="10dp"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="@string/aksiya_va_yangiliklar"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:textColor="@color/ucell_fon"
                            android:fontFamily="@font/name_kopany"
                            android:gravity="top|center"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ucell_fon"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:src="@drawable/g_internet"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4G Yoqish"
                android:gravity="top|center"
                android:textSize="20sp"
                android:fontFamily="@font/name_kopany"
                android:textColor="#C9000000"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:src="@drawable/balance"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Balans"
                android:gravity="top|center"
                android:textSize="20sp"
                android:fontFamily="@font/name_kopany"
                android:textColor="#C9000000"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:src="@drawable/operator"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operator"
                android:gravity="top|center"
                android:textSize="20sp"
                android:fontFamily="@font/name_kopany"
                android:textColor="#C9000000"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>